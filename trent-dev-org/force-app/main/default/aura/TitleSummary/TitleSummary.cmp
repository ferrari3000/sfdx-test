<aura:component >
    <aura:attribute name="title" type="Title__c" />
    
	<div class="genre"> 
    {!v.title.Genre__c}
    </div>
    
    <div class="slds-p-horizontal_small clickable">
        <img class="thumbnail" src="{!v.title.Thumbnail__c}"/>
    </div>
    
    <div class="rating">
        {!v.title.Rating__c}
    </div>
    <div class="user-review">
        <c:titleUserStarReview reviewRating="{!v.title.Average_Review__c}"
        ></c:titleUserStarReview>
    </div>
</aura:component>